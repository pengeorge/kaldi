include var.config

# ---------------------------------------------------------------------------
[*.corpus]
file                            = $(CORPUS)
audio-dir                       = $(AUDIO_DIR)
warn-about-unexpected-elements  = no
capitalize-transcriptions       = no

[*.feature-extraction]
*.network-file-path             = $(SIGNAL_ANALYSIS)
file                            = $(SIGNAL_ANALYSIS)/shared/base.cache.2x.flow
*.base-feature-extraction.file  = $(SIGNAL_ANALYSIS)/mrasta/mrasta.chenzp.flow
*.audio-format                  = wav

# MRASTA config
*.temporal-size                 = 101
*.temporal-right                = 50
*.derivatives                   = 2
*.gauss-filters                 = 6

[*.base-feature-extraction-cache1]
path                            = $(DATA_DIR)/mrasta.hi.features.cache

[*.base-feature-extraction-cache2]
path                            = $(DATA_DIR)/mrasta.lo.features.cache

# ---------------------------------------------------------------------------

[*.channels]
output-channel.file             = $(LOG_DIR)/$(DESCRIPTION).log.gz
output-channel.append           = false
output-channel.unbuffered       = false
output-cahnnel.compressed       = true
output-channel.encoding         = UTF-8

[*]
statistics.channel              = output-channel
system-info.channel             = output-channel
configuration.channel           = output-channel
log.channel                     = output-channel
progress.channel                = output-channel
warning.channel                 = output-channel, stderr
error.channel                   = output-channel, stderr

